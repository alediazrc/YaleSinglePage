@using WebApplication2.Models
@model LoginViewModel


<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-6">
        <section id="loginForm">
            <div class="form-group">
                <div class="col-md-6">
                    <input type="submit" value="Decline" class="col-md-8 btn btn-warning" />
                </div>
                <div class="col-md-6">
                    <input type="submit" value="Allows" class="col-md-8 btn btn-info" />
                </div>
            </div>
        </section>
        <p>
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}